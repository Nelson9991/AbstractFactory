@model IEnumerable<AbstractFactory.Core.Bicicleta>

@{
  ViewData["Title"] = "Index";
}

<h1>Listado de Bicicletas</h1>

<p>
  <a class="btn btn-success" asp-action="Create">Crear Nueva Bicicleta</a>
</p>
<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Marca)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Modelo)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Gama)
      </th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Gama)
        </td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
          <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
          <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
        </td>
      </tr>
    }
  </tbody>
</table>
